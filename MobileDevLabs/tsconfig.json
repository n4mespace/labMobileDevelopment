{
    "compilerOptions": {
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": ["*.ts", "*.tsx", ".eslintrc.js"],
    "exclude": ["node_modules", "__tests__/**/*-test.ts"]
}
